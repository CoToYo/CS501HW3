<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/celsius"
        android:layout_width="123dp"
        android:layout_height="43dp"
        android:text="Celsius"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.203"
         />

    <SeekBar
        android:id="@+id/cBar"
        android:layout_width="231dp"
        android:layout_height="37dp"
        app:layout_constraintTop_toBottomOf="@+id/celsius"
        app:layout_constraintStart_toStartOf="@+id/celsius"/>

    <TextView
        android:id="@+id/fahrenheit"
        android:layout_width="123dp"
        android:layout_height="43dp"
        android:text="Fahrenheit"
        app:layout_constraintStart_toStartOf="@+id/cBar"
        app:layout_constraintTop_toBottomOf="@+id/cBar"
        app:layout_constraintVertical_bias="0.203" />



    <SeekBar
        android:id="@+id/fBar"
        android:layout_width="231dp"
        android:layout_height="37dp"
        app:layout_constraintStart_toStartOf="@+id/fahrenheit"
        app:layout_constraintTop_toBottomOf="@+id/fahrenheit" />

</androidx.constraintlayout.widget.ConstraintLayout>